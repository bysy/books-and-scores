<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:padding="@dimen/widget_padding">
<LinearLayout android:id="@+id/widget"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todays_matches"
        android:textAppearance="?android:textAppearanceSmall"/>
    <TextView android:id="@+id/matches_today_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Scheduled: 7" />
    <TextView android:id="@+id/matches_finished_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="IP &amp; Finished: 3" />
</LinearLayout>
</RelativeLayout>
